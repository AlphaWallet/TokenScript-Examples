<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE token  [
        <!ENTITY style SYSTEM "../shared.css">
        <!ENTITY supply.en SYSTEM "supply.en.shtml">
        <!ENTITY withdraw.en SYSTEM "withdraw.en.shtml">
        <!ENTITY enable.en SYSTEM "enable.en.shtml">
        ]>
<ts:token xmlns:ts="http://tokenscript.org/2019/10/tokenscript"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:xml="http://www.w3.org/XML/1998/namespace"
          xsi:schemaLocation="http://tokenscript.org/2019/10/tokenscript http://tokenscript.org/2019/10/tokenscript/tokenscript.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          custodian="false"
>
    <ts:name>
        <ts:string xml:lang="en">mETH</ts:string>
    </ts:name>
    <ts:contract name="mETH" interface="erc20">
        <ts:address network="1">0xdF9307DFf0a1B57660F60f9457D32027a55ca0B2</ts:address>
    </ts:contract>
    <ts:contract name="dmmController">
        <ts:address network="1">0x4cb120dd1d33c9a3de8bc15620c7cd43418d77e2</ts:address>
    </ts:contract>
    <ts:origins>
        <ts:ethereum contract="mETH"/>
    </ts:origins>

    <ts:cards>
        <ts:token-card>
            <ts:view-iconified/>
            <ts:view>
            </ts:view>
        </ts:token-card>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Supply</ts:string>
            </ts:name>
            <ts:attribute-type id="mintAmount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to supply</ts:string>
                </ts:name>
                <ts:origins>
                    <!-- e18 is a hard coded multiplier.
                    rationale for hardcoding: avoiding over-design  -->
                    <ts:user-entry as="e18"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="mintViaEther" contract="mETH" as="uint">
                    <ts:value ref="mintAmount"/>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view xml:lang="en">&supply.en;</ts:view>
        </ts:action>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Withdraw</ts:string>
            </ts:name>
            <ts:attribute-type id="redeemAmount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to withdraw</ts:string>
                </ts:name>
                <ts:origins>
                    <!--mETH has 18 decimals -->
                    <ts:user-entry as="e18"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="redeem" contract="mETH" as="uint">
                    <ts:data>
                        <ts:uint256 ref="redeemAmount"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view xml:lang="en">&withdraw.en;</ts:view>
        </ts:action>


    </ts:cards>

    <ts:attribute-types>

        <ts:attribute-type id="allowance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:origins>
                <ts:ethereum function="allowance" contract="ETH" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                        <ts:address>0xdF9307DFf0a1B57660F60f9457D32027a55ca0B2</ts:address>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <!-- your balance in ETH (not DMM ETH) -->
        <ts:attribute-type id="tokenBalance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Balance</ts:string>
                <ts:string xml:lang="zh">餘額</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="balanceOf" contract="ETH" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <!-- ETH to mETH exchange rate -->
        <ts:attribute-type id="exchangeRate" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Exchange Rate</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="getCurrentExchangeRate" contract="mETH" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="tokenDecimals" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Token Decimals</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="decimals" contract="mETH" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="mTokenBalance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Balance</ts:string>
                <ts:string xml:lang="zh">餘額</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="balanceOf" contract="mETH" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="supplyInterestRate" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Supply Interest Rate</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="getInterestRateByDmmTokenAddress" contract="dmmController" as="uint">
                    <ts:data>
                        <ts:address>0xdF9307DFf0a1B57660F60f9457D32027a55ca0B2</ts:address>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

    </ts:attribute-types>
</ts:token>
